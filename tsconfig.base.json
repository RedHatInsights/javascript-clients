{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@redhat-cloud-services/build-utils": ["packages/build-utils/src/index.ts"],
      "@redhat-cloud-services/approval-client": ["packages/approval/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
