{
  "name": "@redhat-cloud-services/integrations-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/integrations",
  "projectType": "library",
  "targets": {
    "clean-generate": {
      "command": "rm -rf packages/integrations/src"
    },
    "generate": {
      "executor": "@redhat-cloud-services/build-utils:client-generator",
      "dependsOn": ["clean-generate"],
      "options": {
        "outputPath": "packages/integrations/src",
        "specs": {
          "default": "https://console.redhat.com/api/integrations/v1.0/openapi.json",
          "v2": "https://console.redhat.com/api/integrations/v2/openapi.json"
        },
        "clientName": "IntegrationsClient"
      }
    },
    "clean-build": {
      "command": "rm -rf packages/integrations/dist"
    },
    "build": {
      "executor": "@redhat-cloud-services/build-utils:builder",
      "dependsOn": ["clean-build", "^build"],
      "options": {
        "inputPath": "packages/integrations/src",
        "outputPath": "packages/integrations/dist",
        "main": "packages/integrations/src/index.ts",
        "esmTsConfig": "packages/integrations/tsconfig.esm.json",
        "cjsTsConfig": "packages/integrations/tsconfig.cjs.json"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @redhat-cloud-services/integrations-client {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/integrations/**/*.ts", "packages/integrations/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/integrations/jest.config.ts"
      }
    },
    "integration-v1": {
      "command": "start-server-and-test 'bin/serve.sh https://console.redhat.com/api/integrations/v1.0/openapi.json 3001' http-get://localhost:3001/endpoints 'nx run --verbose @redhat-cloud-services/integrations-client:jest-v1'"
    },
    "jest-v1": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/integrations/jest.integration.v1.config.ts"
      },
      "parallelism": false
    },
    "integration-v2": {
      "command": "start-server-and-test 'bin/serve.sh https://console.redhat.com/api/integrations/v2/openapi.json 3001' http-get://localhost:3001/endpoints 'nx run --verbose @redhat-cloud-services/integrations-client:jest-v2'"
    },
    "jest-v2": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/integrations/jest.integration.v2.config.ts"
      },
      "parallelism": false
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
