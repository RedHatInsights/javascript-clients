{
  "name": "@redhat-cloud-services/remediations-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/remediations",
  "projectType": "library",
  "targets": {
    "clean-generate": {
      "command": "rm -rf packages/remediations/src"
    },
    "generate": {
      "dependsOn": ["clean-generate"],
      "executor": "@redhat-cloud-services/build-utils:client-generator",
      "options": {
        "outputPath": "packages/remediations/src",
        "specs": {
          "default": "http://cloud.redhat.com/api/remediations/v1/openapi.json"
        },
        "clientName": "RemediationsClient"
      }
    },
    "clean-build": {
      "command": "rm -rf packages/remediations/dist"
    },
    "build": {
      "dependsOn": ["clean-build", "^build"],
      "executor": "@redhat-cloud-services/build-utils:builder",
      "options": {
        "inputPath": "packages/remediations/src",
        "outputPath": "packages/remediations/dist",
        "main": "packages/remediations/src/index.ts",
        "esmTsConfig": "packages/remediations/tsconfig.esm.json",
        "cjsTsConfig": "packages/remediations/tsconfig.cjs.json"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @redhat-cloud-services/remediations-client {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/remediations/**/*.ts", "packages/remediations/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/remediations/jest.config.ts"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
