{
  "name": "@redhat-cloud-services/rbac-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/rbac",
  "projectType": "library",
  "targets": {
    "clean-generate": {
      "command": "rm -rf packages/rbac/src"
    },
    "generate": {
      "dependsOn": ["clean-generate"],
      "executor": "@redhat-cloud-services/build-utils:client-generator",
      "options": {
        "outputPath": "packages/rbac/src",
        "specs": {
          "default": "https://raw.githubusercontent.com/RedHatInsights/insights-rbac/master/docs/source/specs/openapi.json",
          "v2": "https://raw.githubusercontent.com/RedHatInsights/insights-rbac/master/docs/source/specs/v2/openapi.yaml"
        },
        "clientName": "RbacClient"
      }
    },
    "clean-build": {
      "command": "rm -rf packages/rbac/dist"
    },
    "build": {
      "dependsOn": ["clean-build", "^build"],
      "executor": "@redhat-cloud-services/build-utils:builder",
      "options": {
        "inputPath": "packages/rbac/src",
        "outputPath": "packages/rbac/dist",
        "main": "packages/rbac/src/index.ts",
        "esmTsConfig": "packages/rbac/tsconfig.esm.json",
        "cjsTsConfig": "packages/rbac/tsconfig.cjs.json"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @redhat-cloud-services/rbac-client {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/rbac/**/*.ts", "packages/rbac/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/rbac/jest.config.ts"
      }
    },
    "integration-v1": {
      "command": "start-server-and-test 'bin/serve.sh https://raw.githubusercontent.com/RedHatInsights/insights-rbac/refs/heads/master/docs/source/specs/openapi.json 3001' http-get://testuser:testpass@localhost:3001/status/ 'nx run --verbose @redhat-cloud-services/rbac-client:jest-v1'"
    },
    "jest-v1": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/rbac/jest.integration.v1.config.ts"
      },
      "parallelism": false
    },
    "integration-v2": {
      "command": "start-server-and-test 'bin/serve.sh https://raw.githubusercontent.com/RedHatInsights/insights-rbac/refs/heads/master/docs/source/specs/v2/openapi.yaml 3001' http-get://testuser:testpass@localhost:3001/workspaces/ 'nx run --verbose @redhat-cloud-services/rbac-client:jest-v2'"
    },
    "jest-v2": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/rbac/jest.integration.v2.config.ts"
      },
      "parallelism": false
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
